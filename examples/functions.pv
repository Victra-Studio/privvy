// Function examples

// Simple function
fun greet(name) {
    print("Hello, " + name + "!")
}

greet("World")

// Function with return value
fun add(a, b) {
    return a + b
}

let result = add(5, 3)
print("5 + 3 =", result)

// Recursive function
fun factorial(n) {
    if (n <= 1) {
        return 1
    }
    return n * factorial(n - 1)
}

print("Factorial of 5:", factorial(5))

